{ 
    "name": "dockerfile-template",

    "build": {
        "dockerfile": "Dockerfile"
    },

    "customizations": {
        "vscode": {
            "extensions": [
				"golang.go",
				"github.vscode-github-actions"
			]
        }
    },

    "mounts": ["source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind,ro=true"],

    "remoteUser": "root"
}